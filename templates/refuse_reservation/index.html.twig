{% extends 'base.html.twig' %}

{% block title %}Reservations{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<h1>Reservations en attente de reponse :</h1>
    <div>
        {% for res in reservations %}
            <div>
                <span>{{res.reservation}}</span>
            <a href="{{ path('app_refuse_reservation' , { id: res.id, action: 'ok' }) }}">Accepter</a>
            <a href="{{ path('app_refuse_reservation' , { id: res.id, action: 'notok'}) }}">Refuser</a>
            </div>
        {% endfor %}
    </div>

{% block accepter %}
<h1>Reservations acceptées:</h1>
    <div>
        {% for acceptedres in accepted_reservations %}
            <div>
                <span>{{acceptedres.reservation}}</span>
            </div>
        {% endfor %}
    </div>
{% endblock %}

{% block refuser %}
<h1>Reservations refusées:</h1>
    <div>
        {% for refusedres in refused_reservations %}
            <div>
                <span>{{refusedres.reservation}}</span>
           </div>
        {% endfor %}
    </div>
{% endblock %}


{% endblock %}